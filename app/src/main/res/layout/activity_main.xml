<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:ignore="HardcodedText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#D3FFF8E1"
        tools:context=".MainActivity">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <View
                android:layout_width="15dp"
                android:layout_height="match_parent"/>

        <EditText
                android:singleLine="true"
                android:id="@+id/etTask"
                android:hint="Title"
                android:layout_width="250dp"
                android:layout_height="wrap_content"/>

        <ImageView
                android:clickable="true"
                android:id="@+id/ivAdd"
                android:layout_marginLeft="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@android:drawable/ic_input_add"/>
        <Button

                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_above="@+id/Rela2"
                android:text="+"
                android:textSize="35dp"
                android:textColor="@color/colorPrimary"
                android:id="@+id/btPlus"

                android:layout_marginBottom="15dp"
                android:background="@drawable/button_circle"
        />

    </LinearLayout>


    <LinearLayout
            android:layout_marginVertical="@dimen/cardview_default_radius"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="394dp">
        <View
                android:layout_width="15dp"
                android:layout_height="match_parent"/>

        <ScrollView

                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="530dp">

            <android.support.v7.widget.RecyclerView
                    android:layout_marginBottom="50dp"
                    android:id="@+id/rvTask"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>

        </ScrollView>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:background="#DA66BB6A"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="171dp">
            <TextView
                    android:text="Task filter:"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <RadioGroup
                    android:background="#C6FFF8E1"
                    android:id="@+id/rdGroup"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="54dp">

                <RadioButton
                        android:id="@+id/rdCompleted"
                        android:text="Completed"
                        android:clickable="true"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <RadioButton
                        android:id="@+id/rdUncompleted"
                        android:text="Uncompleted"
                        android:clickable="true"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <RadioButton
                        android:id="@+id/rdAll"
                        android:text="All"
                        android:clickable="true"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </RadioGroup>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>